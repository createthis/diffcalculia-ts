{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules","tests", "**/*.test.ts", "dist"]
}
